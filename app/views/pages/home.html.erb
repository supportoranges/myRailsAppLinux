<h1>Customer Database</h1>

<% if user_signed_in? %>
  <li>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  </li>
  <br>
  <br>
  <br>
  <%= form_tag(indis_path, method: :get) do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag :lastname, nil, placeholder: 'Last name' %>
    <%= text_field_tag  :firstname, nil, placeholder: 'First name' %>
    <%= submit_tag("Search") %>
  <% end %>
  <br>
  <%= button_to 'Search by company  ', 'tasks/search', method: :get %>
<% else %>
  <%= link_to 'Sign Up', new_user_registration_path %></br>
  <%= link_to 'Login', new_user_session_path %>

<% end %>
